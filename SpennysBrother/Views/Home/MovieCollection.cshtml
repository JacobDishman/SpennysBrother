@model List<Movie>
@{
    ViewData["Title"] = "Movie Collection";
}

<h1>Joel's Movie Collection</h1>
<p>Total movies in collection: @Model.Count</p>
<br />

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Category</th>
            <th>Title</th>
            <th>Year</th>
            <th>Director</th>
            <th>Rating</th>
            <th>Edited?</th>
            <th>Lent To</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.MovieId</td>
                <td>@movie.Category</td>
                <td>@movie.Title</td>
                <td>@movie.Year</td>
                <td>@movie.Director</td>
                <td>@movie.Rating</td>
                <td>@(movie.Edited == true ? "Yes" : "")</td>
                <td>@(movie.LentTo ?? "")</td>
                <td>@(movie.Notes ?? "")</td>
            </tr>
        }
    </tbody>
</table>
